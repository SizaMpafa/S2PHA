<%= simple_form_for @item do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true %>
    <%= f.input :price, as: :decimal, required: true %>
    <%= f.input :stock, as: :integer, required: true %>
    <%= f.input :fit_type, required: false %>
    <%= f.input :category_id,
                as: :select,
                collection: @categories,
                include_blank: "Select a category",
                required: true %>
    <% if @item.photo.present? %>
      <div class="form-group">
        <label>Current Image</label>
        <%= cl_image_tag @item.photo, class: "form-image-preview" %>
      </div>
    <% end %>
    <%= f.input :photo, as: :file, required: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to "Cancel", root_path, class: "btn btn-secondary" %>
  </div>
<% end %>
